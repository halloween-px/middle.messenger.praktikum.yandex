{
  "extends": "stylelint-config-standard-scss",
  "rules": {
    "no-descending-specificity": null,
    "block-no-empty": null,
    "color-hex-length": "short",
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["mixin", "include", "if"]
      }
    ],
    "keyframe-block-no-duplicate-selectors": null
  }
}
